<Window x:Class="ContactManagerWPF.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManagerWPF"
        mc:Ignorable="d"
        Title="" Height="200" Width="300"
        Background="#FF2D2D30"
        FontFamily="Consolas">
    <StackPanel Margin="20">
        <TextBlock Text="Enter the name:" Foreground="White" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,20" Background="#FF333337" Foreground="White" BorderBrush="Gray"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirm" Margin="5" Click="OkButton_Click" 
                    Background="#FF505050" Foreground="White" BorderBrush="Gray" BorderThickness="1"/>
            <Button Content="Cancel" Margin="5" Click="CancelButton_Click" 
                    Background="#FF505050" Foreground="White" BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>
    </StackPanel>
</Window>
